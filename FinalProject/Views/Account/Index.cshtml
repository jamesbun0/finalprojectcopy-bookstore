@{
    ViewBag.Title = "Manage";
}
<h2>@ViewBag.Title.</h2>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>User Name:</dt>
        <dd>@Model.UserName</dd>
        @if (User.IsInRole("Customer") || User.IsInRole("Manager"))
    {
        <dt>Email:</dt>
        <dd>
            <a asp-action="ChangeEmail" asp-controller="Account" asp-route-id="UserID">@Model.Email</a>
        </dd>
        <dt>First Name:</dt>
        <dd>
            <a asp-action="ChangeFirstName" asp-controller="Account" asp-route-id="UserID">@Model.FirstName</a>
        </dd>
        <dt>Last Name:</dt>
        <dd>
            <a asp-action="ChangeLastName" asp-controller="Account" asp-route-id="UserID">@Model.LastName</a>
        </dd>
        <dt>Credit Card Number:</dt>
        <dd>
            <a asp-action="Create" asp-controller="CreditCards" asp-route-id="UserID">xxxx-xxxx-xxxx-xxxx</a>
        </dd>
}

        @if (User.IsInRole("Employee"))
        {
            <dt>Email:</dt>
            <dd>
                @Model.Email
            </dd>
            <dt>First Name:</dt>
            <dd>
                @Model.FirstName
            </dd>
            <dt>Last Name:</dt>
            <dd>
                @Model.LastName
            </dd>

        }

        <dt>Street Address:</dt>
        <dd>
            <a asp-action="ChangeStreetAddress" asp-controller="Account" asp-route-id="UserID">@Model.StreetAddress</a>
        </dd>
        <dt>Phone Number:</dt>
        <dd>
            <a asp-action="ChangePhoneNumber" asp-controller="Account" asp-route-id="UserID">@Model.PhoneNumber</a>
        </dd>


        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
        {
            @Html.ActionLink("Change your password", "ChangePassword")
    }
            ]
        </dd>
    </dl>

</div>
<hr />
